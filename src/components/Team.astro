---
import { t, type Locale } from '../i18n/ui';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const members = [
  { photo: '/images/team/ad.svg', name: 'team.aybek.name', role: 'team.aybek.role', description: 'team.aybek.description' },
  { photo: '/images/team/ls.svg', name: 'team.luiza.name', role: 'team.luiza.role', description: 'team.luiza.description' },
  { photo: '/images/team/vt.svg', name: 'team.victor.name', role: 'team.victor.role', description: 'team.victor.description' }
];
---

<section id="team" class="relative overflow-hidden">
  <div class="absolute inset-0 -z-10 bg-gradient-to-br from-sky-100 via-cyan-50 to-white"></div>
  <div class="mx-auto max-w-6xl px-6 py-10 md:py-14">
    <h2 class="text-2xl font-semibold text-slate-900 md:text-3xl">{t(locale, 'team.title')}</h2>
    <div class="mt-8 grid gap-6 md:grid-cols-3">
      {
        members.map((member) => (
          <article class="rounded-2xl border border-slate-200 bg-white p-6 text-center shadow-sm">
            <img src={member.photo} alt={t(locale, member.name)} class="mx-auto h-32 w-32 rounded-full border border-slate-200" />
            <h3 class="mt-4 text-lg font-semibold text-slate-900">{t(locale, member.name)}</h3>
            <p class="mt-1 text-sm font-medium text-sky-700">{t(locale, member.role)}</p>
            <p class="mt-3 whitespace-pre-line text-sm leading-relaxed text-slate-600">{t(locale, member.description)}</p>
          </article>
        ))
      }
    </div>
  </div>
</section>
