---
import { t, type Locale } from '../i18n/ui';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<section id="contact" class="relative overflow-hidden">
  <div class="absolute inset-0 -z-10 bg-gradient-to-br from-sky-100 via-cyan-50 to-white"></div>
  <div class="mx-auto max-w-6xl px-6 py-10 md:py-14">
    <h2 class="text-2xl font-semibold text-slate-900 md:text-3xl">{t(locale, 'contact.title')}</h2>
    <p class="mt-3 max-w-2xl text-sm text-slate-600 md:text-base">{t(locale, 'contact.subtitle')}</p>
    <div class="mt-8 grid gap-6 md:grid-cols-4">
      <div class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm md:col-span-1">
        <ul class="space-y-4 text-sm text-slate-700">
          <li>
            <span class="block text-xs uppercase tracking-wide text-slate-500">{t(locale, 'contact.email')}</span>
            <a href="mailto:hello@saiora.ai" class="mt-1 inline-block transition hover:text-sky-700">hello@saiora.ai</a>
          </li>
          <li>
            <span class="block text-xs uppercase tracking-wide text-slate-500">{t(locale, 'contact.telegram')}</span>
            <a href="https://t.me/saiora_ai" class="mt-1 inline-block transition hover:text-sky-700">@saiora_ai</a>
          </li>
          <li>
            <span class="block text-xs uppercase tracking-wide text-slate-500">{t(locale, 'contact.phone')}</span>
            <a href="tel:+998000000000" class="mt-1 inline-block transition hover:text-sky-700">+998 00 000 00 00</a>
          </li>
        </ul>
      </div>

      <form
        name="contact"
        method="POST"
        data-netlify="true"
        netlify-honeypot="bot-field"
        class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm md:col-span-3"
      >
        <input type="hidden" name="form-name" value="contact" />
        <p class="hidden">
          <label>
            Donâ€™t fill this out:
            <input name="bot-field" />
          </label>
        </p>
        <input type="hidden" name="locale" value={locale} />

        <label class="mb-4 block text-sm">
          <span class="mb-2 block text-slate-700">{t(locale, 'contact.form.contact')}</span>
          <input
            name="contact"
            type="text"
            required
            placeholder={t(locale, 'contact.form.contactPlaceholder')}
            class="w-full rounded-xl border border-slate-300 bg-white px-4 py-3 text-slate-900 outline-none transition focus:border-sky-500"
          />
        </label>

        <label class="mb-4 block text-sm">
          <span class="mb-2 block text-slate-700">{t(locale, 'contact.form.task')}</span>
          <textarea
            name="task"
            rows="5"
            required
            class="w-full rounded-xl border border-slate-300 bg-white px-4 py-3 text-slate-900 outline-none transition focus:border-sky-500"
          ></textarea>
        </label>

        <button
          type="submit"
          class="rounded-xl border border-[#8cc3f1] bg-[#8cc3f1] px-6 py-3 text-sm font-semibold text-slate-900 transition hover:bg-[#7db8ea]"
        >
          {t(locale, 'contact.form.button')}
        </button>
      </form>
    </div>
  </div>
</section>
