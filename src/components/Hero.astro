---
import { t, type Locale } from '../i18n/ui';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<section class="relative overflow-hidden">
  <div class="absolute inset-0 -z-10 bg-gradient-to-br from-sky-100 via-cyan-50 to-white"></div>
  <div class="mx-auto grid max-w-6xl items-center gap-10 px-6 pb-14 pt-14 md:grid-cols-2 md:pb-20 md:pt-20">
    <div>
      <p class="mb-4 inline-flex rounded-full border border-sky-200 bg-sky-100 px-3 py-1 text-sm uppercase tracking-wider text-sky-700">
        Saiora
      </p>
      <h1 class="max-w-3xl text-4xl font-bold leading-tight text-slate-900 md:text-6xl">
        {t(locale, 'hero.title')}
      </h1>
      <p class="mt-6 max-w-2xl text-lg leading-relaxed text-slate-600 md:text-xl">
        {t(locale, 'hero.subtitle')}
      </p>
      <a
        href="#contact"
        class="mt-8 inline-flex rounded-xl border border-[#8cc3f1] bg-[#8cc3f1] px-6 py-3 text-base font-semibold text-slate-900 transition hover:bg-[#7db8ea]"
      >
        {t(locale, 'hero.cta')}
      </a>
    </div>
    <div class="rounded-2xl border border-sky-100 bg-white/70 p-3 shadow-sm">
      <img
        src="/images/cover_4.svg"
        alt={locale === 'ru' ? 'Главная иллюстрация Saiora' : 'Saiora main illustration'}
        class="h-auto w-full rounded-xl"
        loading="eager"
      />
    </div>
  </div>
</section>
