---
import { t, type Locale } from '../i18n/ui';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
---

<footer class="relative overflow-hidden border-t border-slate-200">
  <div class="absolute inset-0 -z-10 bg-gradient-to-br from-sky-100 via-cyan-50 to-white"></div>
  <div class="mx-auto flex max-w-6xl flex-col items-start justify-between gap-4 px-6 py-8 text-base text-slate-500 md:flex-row md:items-center">
    <p>{t(locale, 'footer.copyright')}</p>
    <div class="flex items-center gap-3">
      <img src="/images/IT_PARK_UZBEKISTAN_logo.png" alt={t(locale, 'footer.resident')} class="h-8 w-auto" />
      <span>{t(locale, 'footer.resident')}</span>
    </div>
  </div>
</footer>
