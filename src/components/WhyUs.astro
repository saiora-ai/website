---
import { t, type Locale } from '../i18n/ui';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;

const points = [
  { title: 'whyUs.speed.title', description: 'whyUs.speed.description' },
  { title: 'whyUs.approach.title', description: 'whyUs.approach.description' },
  { title: 'whyUs.flexibility.title', description: 'whyUs.flexibility.description' },
  { title: 'whyUs.itPark.title', description: 'whyUs.itPark.description' }
];
---

<section id="why-us" class="relative overflow-hidden">
  <div class="absolute inset-0 -z-10 bg-gradient-to-br from-sky-100 via-cyan-50 to-white"></div>
  <div class="mx-auto max-w-6xl px-6 py-10 md:py-14">
    <h2 class="text-3xl font-semibold text-slate-900 md:text-4xl">{t(locale, 'whyUs.title')}</h2>
    <div class="mt-8 overflow-hidden rounded-2xl border border-slate-200 bg-white shadow-sm">
      {
        points.map((point) => (
          <article class="grid gap-3 border-b border-slate-200 p-5 last:border-b-0 md:grid-cols-4 md:items-start md:gap-6 md:p-6">
            <h3 class="text-lg font-semibold text-slate-900 md:col-span-1 md:text-xl">{t(locale, point.title)}</h3>
            <p class="text-base leading-relaxed text-slate-600 md:col-span-3 md:pt-1">{t(locale, point.description)}</p>
          </article>
        ))
      }
    </div>
  </div>
</section>
